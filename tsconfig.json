{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "@vue/theme": [
        "src/index.ts"
      ]
    }
  },
  "include": [
    "src",
    "demo/.vitepress/theme"
  ],
  "exclude": [
    "node_modules"
  ]
}